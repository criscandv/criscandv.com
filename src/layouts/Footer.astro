---
import { SOCIAL_NETWORKS } from "@/utils/constants";
const currentYear = new Date().getFullYear();
---

<footer class="w-full lg:w-[740px] px-0 sm:px-4 lg:px-0 mx-auto">
  <div
    class="flex flex-row justify-between items-center sm:rounded-lg shadow px-4 py-4 border border-black sm:border-white bg-neutral-200 dark:bg-black/30"
  >
    <span class="text-sm text-yellow-800/90 dark:text-main-color-300">
      &copy; {currentYear} |
      <a href="https://criscandv.com/" target="_blank" class="hover:underline"
        >Cristian Cano - @criscandv</a
      >
    </span>
    <ul class="flex flex-row items-center dark:text-white/90 gap-4">
      <li>
        <a
          class="hover:bg-white/10 rounded-full transition text-sm sm:text-base"
          href={SOCIAL_NETWORKS.GITHUB.url}
          title={SOCIAL_NETWORKS.GITHUB.name}
        >
          {(<SOCIAL_NETWORKS.GITHUB.icon class="size-5" />)}
        </a>
      </li>
      <li>
        <a
          class="hover:bg-white/10 rounded-full transition text-sm sm:text-base"
          href={SOCIAL_NETWORKS.LINKEDIN.url}
          title={SOCIAL_NETWORKS.LINKEDIN.name}
        >
          {(<SOCIAL_NETWORKS.LINKEDIN.icon class="size-5" />)}
        </a>
      </li>
      <li>
        <a
          class="hover:bg-white/10 rounded-full transition text-sm sm:text-base"
          href={SOCIAL_NETWORKS.TWITTER.url}
          title={SOCIAL_NETWORKS.TWITTER.name}
        >
          {(<SOCIAL_NETWORKS.TWITTER.icon class="size-5" />)}
        </a>
      </li>
      <li>
        <a
          class="hover:bg-white/10 rounded-full transition text-sm sm:text-base"
          href={SOCIAL_NETWORKS.INSTAGRAM.url}
          title={SOCIAL_NETWORKS.INSTAGRAM.name}
        >
          {(<SOCIAL_NETWORKS.INSTAGRAM.icon class="size-5" />)}
        </a>
      </li>
    </ul>
  </div>
</footer>
