---
import ExternalLinkIcon from '@/components/icons/ExternalLink.astro'
import GithubOutlinedIcon from '@/components/icons/GIthubOutlined.astro'

import Badge from './Badge.astro'

const {
  name,
  description,
  link,
  tags,
  img,
  isOpenSource,
  githubRepoUrl
} = Astro.props
---

<div class="relative w-full p-4 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
  <span class="flex flex-row justify-between">
    {link?
      <a href={link} class="flex gap-1 items-center mb-2 text-xl font-bold text-gray-900 dark:text-white hover:underline" target="_blank">
        {name} <ExternalLinkIcon />
      </a> : 
      <h5 class="mb-2 text-xl font-bold text-gray-900 dark:text-white cursor-default">{name}</h5>
    }
    {isOpenSource &&Â (
      <a class="transition hover:scale-110" href={githubRepoUrl} target="_blank">
        <GithubOutlinedIcon class="size-8"/>  
      </a>
    )}
  </span>
  <p class="mb-5 text-base text-gray-500 sm:text-lg dark:text-gray-400 text-pretty">
    {description}
  </p>
  <div class="flex flex-wrap">
      {tags.map((tag) => (
        <Badge>
          <tag.icon class="size-6"/>
          {tag.name}
        </Badge>
      ))}
  </div>
</div>
